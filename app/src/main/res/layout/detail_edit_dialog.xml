<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_alert"
    android:layout_gravity="center"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/et_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Product name"
            android:background="@drawable/shape_et"
            android:padding="7dp"
            android:layout_marginRight="10dp"
            android:inputType="textCapSentences"/>

        <EditText
            android:id="@+id/et_detail_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:background="@drawable/shape_et"
            android:padding="7dp"
            android:inputType="number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/et_detail_supplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Supplier"
            android:inputType="textCapSentences"
            android:background="@drawable/shape_et"
            android:padding="7dp"/>

        <EditText
            android:id="@+id/et_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:clickable="false"
            android:padding="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_et"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_detail_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Save"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btn_detail_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="Cancel"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>